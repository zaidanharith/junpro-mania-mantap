<UserControl x:Class="BOZea.Views.Category.CategoryDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:BOZea.Views.Shared"
             mc:Ignorable="d"
             FontFamily="Plus Jakarta Sans"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BOZea;component/Views/Styles/MaterialOverrides.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- BooleanToVisibilityConverter -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- NavBar -->
            <RowDefinition Height="*"/>
            <!-- ScrollableContent -->
        </Grid.RowDefinitions>

        <!-- NavBar (Fixed) -->
        <shared:NavBar SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                       ExecuteSearchCommand="{Binding ExecuteSearchCommand}"
                       NavigateHomeCommand="{Binding NavigateHomeCommand}"
                       NavigateCategoryCommand="{Binding NavigateCategoryCommand}"
                       OpenProfileCommand="{Binding OpenProfileCommand}"
                       CurrentUser="{Binding CurrentUser}"
                       VerticalAlignment="Top"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Main Content -->
                <StackPanel Margin="80,60,80,60">

                    <!-- Back Button -->
                    <Button Command="{Binding NavigateHomeCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,30">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="←"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#333"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Back to Dashboard"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Foreground="#333"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Page Header -->
                    <StackPanel Margin="0,0,0,50"
                                HorizontalAlignment="Center">
                        <!-- Category Name -->
                        <TextBlock Text="{Binding CategoryName}"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <!-- Category Description -->
                        <TextBlock Text="{Binding CategoryDescription}"
                                   FontSize="16"
                                   Foreground="#666"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   MaxWidth="600"
                                   Margin="0,0,0,30"
                                   LineHeight="24"/>
                    </StackPanel>

                    <!-- Products Grid -->
                    <ItemsControl ItemsSource="{Binding Products}"
                                  HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           ItemWidth="310"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="15"
                                        Width="280"
                                        Background="White"
                                        CornerRadius="12"
                                        Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000"
                                                          Direction="270"
                                                          ShadowDepth="2"
                                                          BlurRadius="10"
                                                          Opacity="0.1"/>
                                    </Border.Effect>
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick"
                                                      Command="{Binding DataContext.ProductSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <StackPanel>
                                        <!-- Product Image -->
                                        <Border Height="280"
                                                Background="#E8E8E8"
                                                CornerRadius="12,12,0,0">
                                            <Image Source="{Binding ImageUrl}"
                                                   Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Product Info -->
                                        <StackPanel Margin="15,15,15,20">
                                            <!-- Product Name -->
                                            <TextBlock Text="{Binding ProductName}"
                                                       FontWeight="SemiBold"
                                                       FontSize="16"
                                                       Foreground="#333"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,0,0,5"/>

                                            <!-- Category -->
                                            <TextBlock Text="{Binding Category}"
                                                       Foreground="#999"
                                                       FontSize="14"
                                                       Margin="0,0,0,10"/>

                                            <!-- Price (Highlighted without background) -->
                                            <TextBlock Text="{Binding Price}"
                                                       FontWeight="ExtraBold"
                                                       FontSize="22"
                                                       Foreground="{StaticResource PrimaryBlueBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State (jika tidak ada produk) -->
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,100,0,0"
                                Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="📦"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="No products found in this category"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Please check back later or browse other categories"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                </StackPanel>

                <!-- Footer -->
                <shared:Footer/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>