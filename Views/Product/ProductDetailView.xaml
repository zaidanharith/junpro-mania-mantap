<UserControl x:Class="BOZea.Views.Product.ProductDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:BOZea.Views.Shared"
             mc:Ignorable="d"
             FontFamily="Plus Jakarta Sans">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BOZea;component/Views/Styles/MaterialOverrides.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- NavBar (Fixed) -->
            <RowDefinition Height="*"/>
            <!-- ScrollableContent + Footer -->
        </Grid.RowDefinitions>

        <!-- NavBar (Fixed - tidak scroll) -->
        <shared:NavBar SearchQuery="{Binding SearchQuery, Mode=TwoWay}"
                       ExecuteSearchCommand="{Binding ExecuteSearchCommand}"
                       NavigateHomeCommand="{Binding NavigateHomeCommand}"
                       NavigateCategoryCommand="{Binding NavigateCategoryCommand}"
                       OpenProfileCommand="{Binding OpenProfileCommand}"
                       CurrentUser="{Binding CurrentUser}"
                       VerticalAlignment="Top"/>

        <!-- Scrollable Content (dengan Footer di dalam) -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Product Header Button -->
                <Grid Margin="80,40,80,0">
                    <Button Content="All Products"
                            Width="120"
                            Height="40"
                            Background="White"
                            BorderBrush="#999"
                            BorderThickness="1"
                            Foreground="Black"
                            FontSize="14"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Command="{Binding BackCommand}"/>
                </Grid>

                <!-- Product Detail Section -->
                <Grid Margin="80,30,80,60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product Image -->
                    <Border Background="#D3D3D3"
                            CornerRadius="12"
                            Height="320"
                            Margin="0,0,40,0">
                        <Image Source="{Binding Product.ImageUrl}"
                               Stretch="UniformToFill"/>
                    </Border>

                    <!-- Product Info -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Top"
                                Margin="20,0,0,0">
                        <!-- Product Name -->
                        <TextBlock Text="{Binding Product.ProductName}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>

                        <!-- Category -->
                        <TextBlock Text="{Binding Product.Category}"
                                   FontSize="16"
                                   Foreground="#666"
                                   Margin="0,0,0,20"/>

                        <!-- Price -->
                        <TextBlock Text="{Binding Product.Price}"
                                   FontSize="28"
                                   FontWeight="ExtraBold"
                                   Foreground="{StaticResource PrimaryBlueBrush}"
                                   Margin="0,0,0,25"/>

                        <!-- Description -->
                        <TextBlock Text="{Binding Product.Description}"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   Foreground="#333"
                                   Margin="0,0,0,35"/>

                        <!-- Buy Now Button - PREMIUM STYLE -->
                        <Button Style="{StaticResource PremiumBuyButton}"
                                Command="{Binding BuyNowCommand}"
                                Height="50"
                                Width="200"
                                Margin="0,0,0,30"
                                HorizontalAlignment="Left"
                                RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <ScaleTransform ScaleX="1"
                                                ScaleY="1"/>
                            </Button.RenderTransform>
                            <TextBlock Text="ðŸ›’ Buy Now"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Button>
                        <!-- Additional Info -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,25,0,0"
                                    VerticalAlignment="Center">
                            <Border Background="#E8F5E9"
                                    CornerRadius="6"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="âœ“"
                                               Foreground="#4CAF50"
                                               FontWeight="Bold"
                                               Margin="0,0,5,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Secure Payment"
                                               Foreground="#2E7D32"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#FFF3E0"
                                    CornerRadius="6"
                                    Padding="12,8"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="ðŸšš"
                                               Margin="0,0,5,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Fast Shipping"
                                               Foreground="#E65100"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Customer Reviews Section -->
                <StackPanel Margin="80,0,80,60">
                    <!-- Reviews Title -->
                    <TextBlock Text="Customer Reviews"
                               FontSize="28"
                               FontWeight="Bold"
                               Margin="0,0,0,30"/>

                    <!-- Reviews Grid (2 columns) -->
                    <ItemsControl ItemsSource="{Binding Reviews}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2"
                                             HorizontalAlignment="Left"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E8E8E8"
                                        CornerRadius="8"
                                        Margin="0,0,30,30"
                                        Padding="20"
                                        Width="300"
                                        MinHeight="200">
                                    <StackPanel>
                                        <!-- User Info Row -->
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar Circle -->
                                            <Ellipse Width="40"
                                                     Height="40"
                                                     Fill="#808080"
                                                     Margin="0,0,12,0"/>

                                            <!-- Username -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Username}"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- Review Title -->
                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Margin="0,0,0,10"/>

                                        <!-- Review Content -->
                                        <TextBlock Text="{Binding ReviewText}"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"
                                                   LineHeight="20"
                                                   Foreground="#444"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Footer (Inside ScrollViewer) -->
                <shared:Footer/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>