<UserControl x:Class="BOZea.Views.Shared.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BOZea.ViewModels.Shared"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Top"
             FontFamily="Plus Jakarta Sans"
             d:DesignWidth="1913.011">

    <UserControl.DataContext>
        <vm:NavBarViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/MaterialOverrides.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Height="72" HorizontalAlignment="Stretch">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF113F67" Offset="0"/>
                <GradientStop Color="#FF227DCD" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid Margin="50,0,50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo / Home -->
            <Button Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    Padding="0"
                    Cursor="Hand"
                    Command="{Binding NavigateHomeCommand}"
                    Height="64">
                <Image Source="/Views/Assets/logo_white.png"
                       Height="88"
                       Stretch="Uniform"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Width="148"/>
            </Button>

            <!-- Center - Empty (bisa digunakan untuk search nanti) -->
            <Grid Grid.Column="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <!-- Reserved for future search feature -->
            </Grid>

            <!-- Right Section - Greeting & Profile -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right">

                <!-- Greeting Text -->
                <TextBlock Text="{Binding GreetingText}"
                           TextAlignment="Right"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="20"
                           Background="Transparent"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>

                <!-- Account / Profile -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="0"
                        Command="{Binding OpenProfileCommand}"
                        Height="51">
                    <Border Width="40"
                            Height="40"
                            CornerRadius="20"
                            BorderBrush="White"
                            BorderThickness="2">
                        <Border.Clip>
                            <EllipseGeometry Center="20,20"
                                             RadiusX="20"
                                             RadiusY="20"/>
                        </Border.Clip>

                        <Grid>
                            <!-- Profile Image dari CurrentUser -->
                            <Image Source="{Binding CurrentUser.Image}"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Width="40"
                                   Height="40"
                                   RenderTransformOrigin="0.5,0.5">
                                <Image.RenderTransform>
                                    <ScaleTransform ScaleX="1.12" ScaleY="1.12"/>
                                </Image.RenderTransform>
                            </Image>

                            <!-- Fallback icon -->
                            <materialDesign:PackIcon Kind="AccountCircle"
                                                     Foreground="White"
                                                     Width="40"
                                                     Height="40"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentUser.Image}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentUser.Image}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </Grid>
                    </Border>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>