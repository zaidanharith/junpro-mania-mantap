<UserControl x:Class="BOZea.Views.Shared.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"
             FontFamily="Plus Jakarta Sans"
             Height="Auto"
             MinHeight="160">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/MaterialOverrides.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource PrimaryBlueBrush}">
        <Grid Margin="60,30,60,30"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - Tagline -->
            <StackPanel Grid.Column="0"
                        VerticalAlignment="Top">
                <TextBlock Text="Sail More, Spend Less!"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Find Your Need in One Place."
                           Foreground="White"
                           Margin="0,0,0,12"/>
                <TextBlock Text="Shop all maritime related to make your works easy."
                           Foreground="White"/>
            </StackPanel>

            <!-- Right Section - Products Menu -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Top"
                        Margin="80,0,0,0"
                        MinWidth="120">
                <TextBlock Text="Products"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,12"
                           FontSize="15"/>

                <!-- Boat -->
                <TextBlock Margin="0,0,0,8"
                           FontSize="14">
                    <Hyperlink Command="{Binding NavigateBoatCommand, ElementName=Root}"
                               CommandParameter="Boat"
                               Foreground="White"
                               TextDecorations="None"
                               Cursor="Hand">
                        <Run Text="Boat"/>
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink">
                                <Setter Property="Foreground"
                                        Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Foreground"
                                                Value="#B3D9FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                    </Hyperlink>
                </TextBlock>

                <!-- Engines -->
                <TextBlock Margin="0,0,0,8"
                           FontSize="14">
                    <Hyperlink Command="{Binding NavigateEnginesCommand, ElementName=Root}"
                               CommandParameter="Engines"
                               Foreground="White"
                               TextDecorations="None"
                               Cursor="Hand">
                        <Run Text="Engines"/>
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink">
                                <Setter Property="Foreground"
                                        Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Foreground"
                                                Value="#B3D9FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                    </Hyperlink>
                </TextBlock>

                <!-- GPS -->
                <TextBlock Margin="0,0,0,0"
                           FontSize="14">
                    <Hyperlink Command="{Binding NavigateGpsCommand, ElementName=Root}"
                               CommandParameter="GPS"
                               Foreground="White"
                               TextDecorations="None"
                               Cursor="Hand">
                        <Run Text="GPS"/>
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink">
                                <Setter Property="Foreground"
                                        Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Foreground"
                                                Value="#B3D9FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
