<UserControl x:Class="BOZea.Views.Shared.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Plus Jakarta Sans"
             Height="Auto"
             MinHeight="160">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/MaterialOverrides.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource PrimaryBlueBrush}">
        <Grid Margin="60,30,60,30"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - Tagline -->
            <StackPanel Grid.Column="0"
                        VerticalAlignment="Top">
                <TextBlock Text="Sail More, Spend Less!"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Find Your Need in One Place."
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,12"/>
                <TextBlock Text="Shop all maritime related to make your works easy."
                           Foreground="#E6F0F7"
                           Margin="0,0,0,0"
                           TextWrapping="Wrap"
                           FontSize="15"
                           LineHeight="22"/>
            </StackPanel>

            <!-- Right Section - Products Menu -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Top"
                        Margin="80,0,0,0"
                        MinWidth="120">
                <TextBlock Text="Products"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0,0,0,12"
                           FontSize="15"/>
                
                <TextBlock Text="All Products"
                           Foreground="White"
                           Margin="0,0,0,8"
                           FontSize="14"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Opacity"
                                            Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Boat"
                           Foreground="White"
                           Margin="0,0,0,8"
                           FontSize="14"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Opacity"
                                            Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="Engines"
                           Foreground="White"
                           Margin="0,0,0,8"
                           FontSize="14"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Opacity"
                                            Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="GPS"
                           Foreground="White"
                           Margin="0,0,0,0"
                           FontSize="14"
                           Cursor="Hand">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Opacity"
                                            Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
