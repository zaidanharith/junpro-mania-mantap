<UserControl x:Class="BOZea.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:BOZea.Views.Shared"
             mc:Ignorable="d"
             FontFamily="Plus Jakarta Sans">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles/MaterialOverrides.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Product card template (mirip contoh Window) -->
            <DataTemplate x:Key="ProductCardTemplate">
                <Border Background="White" CornerRadius="4" Margin="0,0,10,10" Width="200" Padding="8">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" Color="#DDD" BlurRadius="5" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <Border Height="120" Background="#EEEEEE" CornerRadius="4" Margin="0,0,0,8">
                            <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                        </Border>

                        <TextBlock Text="{Binding ProductName}" FontWeight="Bold" FontSize="14" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding Category}" Foreground="{StaticResource TextGrayBrush}" FontSize="12" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding Price}" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>   <!-- NavBar -->
                <RowDefinition Height="300"/>    <!-- Hero -->
                <RowDefinition Height="*"/>      <!-- Content -->
                <RowDefinition Height="Auto"/>   <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- NavBar (ambil dari Views/Shared) -->
            <shared:NavBar Grid.Row="0"/>

            <!-- Hero -->
            <Grid Grid.Row="1" Height="300">
                <Image Source="/Views/Assets/hero-image.jpg" Stretch="UniformToFill"/>
                <Rectangle Fill="#000000" Opacity="0.4"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,0">
                    <TextBlock Text="All maritime products." Foreground="White" FontSize="32" FontWeight="Bold"/>
                    <TextBlock Text="One Place." Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="Buy and sell certified used boat, engines, navigation systems, spare parts."
                               Foreground="White" FontSize="16" MaxWidth="480" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>

            <!-- Main content -->
            <StackPanel Grid.Row="2" Margin="20">
                <!-- All Products -->
                <Grid Margin="0,10,0,5">
                    <TextBlock Text="All Products" FontSize="20" FontWeight="Bold" Margin="0,5,0,5" VerticalAlignment="Center"/>
                    <Button Content="See all >" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryBlueBrush}" Command="{Binding SeeAllCommand}" CommandParameter="AllProducts" VerticalAlignment="Center" Height="40"/>
                </Grid>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding AllProducts}" ItemTemplate="{StaticResource ProductCardTemplate}" Height="150">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Boat -->
                <Grid VerticalAlignment="Center">
                    <TextBlock Text="Boat" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,5,0,5"/>
                    <Button Content="See all >" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryBlueBrush}" Command="{Binding SeeAllCommand}" CommandParameter="Boat" Height="40"/>
                </Grid>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding Boats}" ItemTemplate="{StaticResource ProductCardTemplate}" Height="150">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Engines -->
                <Grid VerticalAlignment="Center">
                    <TextBlock Text="Engines" FontSize="20" FontWeight="Bold" Margin="0,5,0,5" VerticalAlignment="Center"/>
                    <Button Content="See all >" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryBlueBrush}" Command="{Binding SeeAllCommand}" CommandParameter="Engines" Height="40"/>
                </Grid>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding Engines}" ItemTemplate="{StaticResource ProductCardTemplate}" Height="150">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- GPS -->
                <Grid VerticalAlignment="Center">
                    <TextBlock Text="GPS" FontSize="20" FontWeight="Bold" Margin="0,5,0,5" VerticalAlignment="Center"/>
                    <Button Content="See all >" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Foreground="{StaticResource PrimaryBlueBrush}" Command="{Binding SeeAllCommand}" CommandParameter="GPS" Height="40" VerticalAlignment="Center"/>
                </Grid>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,10">
                    <ItemsControl ItemsSource="{Binding Gps}" ItemTemplate="{StaticResource ProductCardTemplate}" Height="150">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- Footer (ambil dari Views/Shared) -->
            <shared:Footer Grid.Row="3"/>
        </Grid>
    </ScrollViewer>
</UserControl>
