<UserControl x:Class="junpro_mania_mantap.Views.Auth.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="450"
             Width="350">

        <UserControl.Resources>
                <SolidColorBrush x:Key="PrimaryColor"
                                 Color="#3F51B5"/>
                <Style TargetType="TextBlock">
                        <Setter Property="Foreground"
                                Value="#333333"/>
                        <Setter Property="FontWeight"
                                Value="SemiBold"/>
                        <Setter Property="Margin"
                                Value="0,10,0,5"/>
                </Style>
                <Style TargetType="TextBox">
                        <Setter Property="Padding"
                                Value="8"/>
                        <Setter Property="BorderBrush"
                                Value="#CCCCCC"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="VerticalContentAlignment"
                                Value="Center"/>
                </Style>
                <Style TargetType="PasswordBox">
                        <Setter Property="Padding"
                                Value="8"/>
                        <Setter Property="BorderBrush"
                                Value="#CCCCCC"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="VerticalContentAlignment"
                                Value="Center"/>
                </Style>
        </UserControl.Resources>

        <Border Background="White"
                CornerRadius="10"
                Margin="20"
                Padding="20">
                <StackPanel VerticalAlignment="Center">

                        <TextBlock Text="Masuk ke Akun Anda"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,25"/>

                        <TextBlock Text="Nama Pengguna (Username)"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,10"
                                 BorderBrush="#BDBDBD"/>

                        <TextBlock Text="Kata Sandi (Password)"/>
                        <PasswordBox x:Name="PasswordBox"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     Margin="0,0,0,20"
                                     BorderBrush="#BDBDBD"/>

                        <Button Content="MASUK"
                                Command="{Binding LoginCommand}"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="10"
                                BorderThickness="0"/>

                        <TextBlock Text="{Binding Message}"
                                   HorizontalAlignment="Center"
                                   Foreground="#E53935"
                                   Margin="0,15,0,0"
                                   FontSize="12"
                                   FontWeight="Normal"/>

                        <TextBlock HorizontalAlignment="Center"
                                   Margin="0,20,0,0">
                                <Run Text="Belum punya akun? "/>
                                <Hyperlink Command="{Binding NavigateRegisterCommand}"
                                           Foreground="{StaticResource PrimaryColor}">Daftar di sini</Hyperlink>
                        </TextBlock>

                </StackPanel>
        </Border>
</UserControl>
