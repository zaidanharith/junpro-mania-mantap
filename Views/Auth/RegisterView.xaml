<UserControl x:Class="BOZea.Views.Auth.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             FontFamily="Plus Jakarta Sans">

        <UserControl.Resources>
                <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                                <!-- <ResourceDictionary Source="/Views/Styles/MaterialDesignResources.xaml"/> -->
                                <ResourceDictionary Source="/Views/Styles/MaterialOverrides.xaml"/>
                        </ResourceDictionary.MergedDictionaries>

                        <FontFamily x:Key="TitleFont">Plus Jakarta Sans</FontFamily>
                </ResourceDictionary>
        </UserControl.Resources>

        <Grid>
                <Image Source="/Views/Assets/background.png"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>

                <Border Background="White"
                        CornerRadius="90"
                        HorizontalAlignment="Right"
                        Width="500"
                        Height="750"
                        Margin="0,0,150,0">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  Direction="180"
                                                  ShadowDepth="15"
                                                  Opacity="0.2"
                                                  BlurRadius="30"/>
                        </Border.Effect>

                        <ScrollViewer VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Margin="60,20,60,20"
                                            VerticalAlignment="Center">

                                        <Image Source="/Views/Assets/logo.png"
                                               Stretch="UniformToFill"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch"/>

                                        <TextBlock Text="Create Account"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource TitleFont}"
                                                   Foreground="{StaticResource PrimaryBlueBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="UsernamePlaceholder"
                                                                   Text="Username"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="UsernameTextBox"
                                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Username"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="EmailPlaceholder"
                                                                   Text="Email address"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="EmailTextBox"
                                                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Email address"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="PasswordPlaceholder"
                                                                   Text="Password"
                                                                   Style="{StaticResource PlaceholderText}"/>

                                                        <PasswordBox x:Name="PasswordBox"
                                                                     PasswordChanged="PasswordBox_PasswordChanged"
                                                                     Style="{StaticResource CustomOutlinedPasswordBox}"
                                                                     Visibility="Visible"
                                                                     materialDesign:HintAssist.Hint="Password"/>

                                                        <TextBox x:Name="PasswordVisibleTextBox"
                                                                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 Visibility="Collapsed"
                                                                 materialDesign:HintAssist.Hint="Password"/>

                                                        <Button x:Name="TogglePasswordButton"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,10,5"
                                                                Padding="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                Click="TogglePasswordVisibility">
                                                                <TextBlock Text="ğŸ‘"
                                                                           FontSize="18"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Center"
                                                                           Foreground="{StaticResource TextGrayBrush}"/>
                                                        </Button>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="ConfirmPasswordPlaceholder"
                                                                   Text="Confirmation Password"
                                                                   Style="{StaticResource PlaceholderText}"/>

                                                        <PasswordBox x:Name="PasswordConfirmBox"
                                                                     PasswordChanged="PasswordConfirmBox_PasswordChanged"
                                                                     Style="{StaticResource CustomOutlinedPasswordBox}"
                                                                     Visibility="Visible"
                                                                     materialDesign:HintAssist.Hint="Confirmation Password"/>

                                                        <TextBox x:Name="PasswordConfirmVisibleTextBox"
                                                                 Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 Visibility="Collapsed"
                                                                 materialDesign:HintAssist.Hint="Confirmation Password"/>

                                                        <Button x:Name="ToggleConfirmPasswordButton"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,10,5"
                                                                Padding="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                Click="ToggleConfirmPasswordVisibility">
                                                                <TextBlock Text="ğŸ‘"
                                                                           FontSize="18"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Center"
                                                                           Foreground="{StaticResource TextGrayBrush}"/>
                                                        </Button>
                                                </Grid>
                                        </Border>

                                        <Button Content="Create Account"
                                                Command="{Binding RegisterCommand}"
                                                Style="{StaticResource PrimaryButton}"
                                                Foreground="White"
                                                Margin="0,25,0,10"/>

                                        <TextBlock Text="{Binding Message}"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#E53935"
                                                   Margin="0,0,0,20"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>

                                        <TextBlock TextAlignment="Center"
                                                   Foreground="{StaticResource TextGrayBrush}"
                                                   FontSize="16"
                                                   Margin="0,0,0,25"
                                                   TextWrapping="Wrap">
                        <Run Text="By creating an account you agree to Bozea's"/>
                        <LineBreak/>
                        <Hyperlink Foreground="{StaticResource PrimaryBlueBrush}"
                                                TextDecorations="None">
                            <Run Text="Terms of Services"/>
                        </Hyperlink>
                        <Run Text=" and "/>
                        <Hyperlink Foreground="{StaticResource PrimaryBlueBrush}"
                                                TextDecorations="None">
                            <Run Text="Privacy Policies"/>
                        </Hyperlink>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="Have an account? "
                                                           Foreground="{StaticResource TextGrayBrush}"
                                                           FontSize="16"/>
                                                <TextBlock>
                            <Hyperlink Command="{Binding NavigateLoginCommand}"
                                                        Foreground="{StaticResource PrimaryBlueBrush}"
                                                        FontWeight="SemiBold"
                                                        FontSize="16"
                                                        TextDecorations="None">
                                <Run Text="Log in"/>
                            </Hyperlink>
                                                </TextBlock>
                                        </StackPanel>

                                </StackPanel>
                        </ScrollViewer>
                </Border>
        </Grid>
</UserControl>