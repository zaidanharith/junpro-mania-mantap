<UserControl x:Class="BOZea.Views.Auth.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             FontFamily="Plus Jakarta Sans">

        <UserControl.Resources>
                <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                                <!-- <ResourceDictionary Source="/Views/Styles/MaterialDesignResources.xaml"/> -->
                                <ResourceDictionary Source="/Views/Styles/MaterialOverrides.xaml"/>
                        </ResourceDictionary.MergedDictionaries>

                        <FontFamily x:Key="TitleFont">Plus Jakarta Sans</FontFamily>
                </ResourceDictionary>
        </UserControl.Resources>

        <Grid>
                <Image Source="/Views/Assets/background.png"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>

                <Border Background="White"
                        CornerRadius="90"
                        HorizontalAlignment="Right"
                        Width="600"
                        Height="1000"
                        Margin="0,0,150,0">
                        <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  Direction="180"
                                                  ShadowDepth="15"
                                                  Opacity="0.2"
                                                  BlurRadius="30"/>
                        </Border.Effect>

                        <ScrollViewer VerticalScrollBarVisibility="Disabled"
                                      HorizontalScrollBarVisibility="Disabled">
                                <StackPanel Margin="60,20,60,20"
                                            VerticalAlignment="Center">

                                        <Image Source="/Views/Assets/logo.png"
                                               Stretch="UniformToFill"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch"/>

                                        <TextBlock Text="Create Account"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource TitleFont}"
                                                   Foreground="{StaticResource PrimaryBlueBrush}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="NamePlaceholder"
                                                                   Text="Name"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="NameTextBox"
                                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Name"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="EmailPlaceholder"
                                                                   Text="Email address"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="EmailTextBox"
                                                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Email address"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="PhonePlaceholder"
                                                                   Text="Phone"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="PhoneTextBox"
                                                                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Phone"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="AddressPlaceholder"
                                                                   Text="Address"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="AddressTextBox"
                                                                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Address"
                                                                 AcceptsReturn="True"
                                                                 TextWrapping="Wrap"
                                                                 Height="100"
                                                                 VerticalContentAlignment="Top"
                                                                 Padding="20,12"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox x:Name="ImageFileNameTextBox"
                                                                 Grid.Column="0"
                                                                 Text="{Binding ImageFileName, Mode=OneWay}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 IsReadOnly="True"
                                                                 materialDesign:HintAssist.Hint="Profile Image (Optional)"
                                                                 Foreground="#666"/>

                                                        <Button Grid.Column="1"
                                                                Width="50"
                                                                Height="50"
                                                                Click="BrowseImage_Click"
                                                                Margin="10,0,0,0"
                                                                Cursor="Hand"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">
                                                                <Button.Style>
                                                                        <Style TargetType="Button">
                                                                                <Setter Property="Background"
                                                                                        Value="{StaticResource LightBlueBrush}"/>
                                                                                <Setter Property="Foreground"
                                                                                        Value="White"/>
                                                                                <Setter Property="BorderThickness"
                                                                                        Value="0"/>
                                                                                <Setter Property="Template">
                                                                                        <Setter.Value>
                                                                                                <ControlTemplate TargetType="Button">
                                                                                                        <Border Background="{TemplateBinding Background}"
                                                                                                                CornerRadius="25"
                                                                                                                Width="{TemplateBinding Width}"
                                                                                                                Height="{TemplateBinding Height}">
                                                                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                                                                  VerticalAlignment="Center"/>
                                                                                                        </Border>
                                                                                                        <ControlTemplate.Triggers>
                                                                                                                <Trigger Property="IsMouseOver"
                                                                                                                         Value="True">
                                                                                                                        <Setter Property="Opacity"
                                                                                                                                Value="0.9"/>
                                                                                                                </Trigger>
                                                                                                        </ControlTemplate.Triggers>
                                                                                                </ControlTemplate>
                                                                                        </Setter.Value>
                                                                                </Setter>
                                                                        </Style>
                                                                </Button.Style>

                                                                <!-- Upload icon using MaterialDesign PackIcon -->
                                                                <materialDesign:PackIcon Kind="Upload"
                                                                                         Width="20"
                                                                                         Height="20"
                                                                                         Foreground="White"/>
                                                        </Button>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="UsernamePlaceholder"
                                                                   Text="Username"
                                                                   Style="{StaticResource PlaceholderText}"/>
                                                        <TextBox x:Name="UsernameTextBox"
                                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 TextChanged="TextBox_TextChanged"
                                                                 materialDesign:HintAssist.Hint="Username"/>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="PasswordPlaceholder"
                                                                   Text="Password"
                                                                   Style="{StaticResource PlaceholderText}"/>

                                                        <PasswordBox x:Name="PasswordBox"
                                                                     PasswordChanged="PasswordBox_PasswordChanged"
                                                                     Style="{StaticResource CustomOutlinedPasswordBox}"
                                                                     Visibility="Visible"
                                                                     materialDesign:HintAssist.Hint="Password"/>

                                                        <TextBox x:Name="PasswordVisibleTextBox"
                                                                 Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 Visibility="Collapsed"
                                                                 materialDesign:HintAssist.Hint="Password"/>

                                                        <Button x:Name="TogglePasswordButton"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,10,5"
                                                                Padding="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                Click="TogglePasswordVisibility">
                                                                <TextBlock Text="👁"
                                                                           FontSize="18"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Center"
                                                                           Foreground="{StaticResource TextGrayBrush}"/>
                                                        </Button>
                                                </Grid>
                                        </Border>

                                        <Border Style="{StaticResource InputFieldBorder}">
                                                <Grid>
                                                        <TextBlock x:Name="ConfirmPasswordPlaceholder"
                                                                   Text="Confirmation Password"
                                                                   Style="{StaticResource PlaceholderText}"/>

                                                        <PasswordBox x:Name="PasswordConfirmBox"
                                                                     PasswordChanged="PasswordConfirmBox_PasswordChanged"
                                                                     Style="{StaticResource CustomOutlinedPasswordBox}"
                                                                     Visibility="Visible"
                                                                     materialDesign:HintAssist.Hint="Confirmation Password"/>

                                                        <TextBox x:Name="PasswordConfirmVisibleTextBox"
                                                                 Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                                                 Style="{StaticResource CustomOutlinedTextBox}"
                                                                 Visibility="Collapsed"
                                                                 materialDesign:HintAssist.Hint="Confirmation Password"/>

                                                        <Button x:Name="ToggleConfirmPasswordButton"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                Margin="0,0,10,5"
                                                                Padding="0"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Cursor="Hand"
                                                                Click="ToggleConfirmPasswordVisibility">
                                                                <TextBlock Text="👁"
                                                                           FontSize="18"
                                                                           VerticalAlignment="Center"
                                                                           HorizontalAlignment="Center"
                                                                           Foreground="{StaticResource TextGrayBrush}"/>
                                                        </Button>
                                                </Grid>
                                        </Border>

                                        <!-- Sebelum Register Button -->
                                        <TextBlock Text="{Binding Message}"
                                                   Foreground="Red"
                                                   FontSize="14"
                                                   TextWrapping="Wrap"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,10,0,10">
                                                <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility"
                                                                        Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Message}"
                                                                                     Value="">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Message}"
                                                                                     Value="{x:Null}">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                </Style.Triggers>
                                                        </Style>
                                                </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Register Button - disable saat uploading -->
                                        <Button Content="Create Account"
                                                Command="{Binding RegisterCommand}"
                                                IsEnabled="{Binding IsNotUploading}"
                                                Style="{StaticResource PrimaryButton}"
                                                Foreground="White"
                                                Margin="0,15,0,10"/>

                                        <TextBlock Text="{Binding Message}"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#E53935"
                                                   Margin="0,0,0,20"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="Have an account? "
                                                           Foreground="{StaticResource TextGrayBrush}"
                                                           FontSize="16"/>
                                                <TextBlock>
                            <Hyperlink Command="{Binding NavigateLoginCommand}"
                                                        Foreground="{StaticResource PrimaryBlueBrush}"
                                                        FontWeight="SemiBold"
                                                        FontSize="16"
                                                        TextDecorations="None">
                                <Run Text="Log in"/>
                            </Hyperlink>
                                                </TextBlock>
                                        </StackPanel>

                                </StackPanel>
                        </ScrollViewer>
                </Border>
        </Grid>
</UserControl>