<UserControl x:Class="junpro_mania_mantap.Views.Auth.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="1000"
             Width="500">
    <Border Background="White"
            CornerRadius="10"
            Margin="20"
            Padding="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Daftar Akun Baru"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="0,0,0,25"/>

            <TextBlock Text="Nama Lengkap"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Telepon"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Username"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox"
                         PasswordChanged="PasswordBox_PasswordChanged"
                         Margin="0,0,0,10"/>

            <TextBlock Text="Konfirmasi Password"/>
            <PasswordBox x:Name="PasswordConfirmBox"
                         PasswordChanged="PasswordConfirmBox_PasswordChanged"
                         Margin="0,0,0,10"/>

            <TextBlock Text="Alamat"/>
            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>

            <Button Content="DAFTAR"
                    Command="{Binding RegisterCommand}"
                    Background="#3F51B5"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Padding="10"
                    BorderThickness="0"/>

            <TextBlock Text="{Binding Message}"
                       HorizontalAlignment="Center"
                       Foreground="#E53935"
                       Margin="0,15,0,0"
                       FontSize="12"/>
            <TextBlock HorizontalAlignment="Center"
                       Margin="0,20,0,0">
                <Run Text="Sudah punya akun? "/>
                <Hyperlink Command="{Binding NavigateLoginCommand}"
                           Foreground="{StaticResource PrimaryColor}">Masuk di sini</Hyperlink>
            </TextBlock>

        </StackPanel>
    </Border>
</UserControl>
