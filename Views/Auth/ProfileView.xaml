<UserControl x:Class="BOZea.Views.Auth.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             FontFamily="Plus Jakarta Sans"
             Background="#F5F5F5"
             d:DesignWidth="1869.38"
             d:DesignHeight="1168.84"
             Width="1869.5">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.2"/>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Rating Button Style -->
        <Style x:Key="RatingButtonStyle"
               TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="#F0F0F0"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,4,0"
                                Cursor="Hand">
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="12"
                                       Foreground="#666"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#227DCD"/>
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#227DCD"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#227DCD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="100,30,40,40"
                        Width="1024">

                <!-- Back Button & Logout Button -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back to Dashboard Button -->
                    <Button Grid.Column="0"
                            Command="{Binding NavigateHomeCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Left"
                            Padding="0"
                            Height="45"
                            Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#333"
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Back to Dashboard"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Foreground="#333"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Logout Button -->
                    <Button Grid.Column="2"
                            Command="{Binding LogoutCommand}"
                            Background="#DC3545"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            MinWidth="120"
                            Padding="20,0"
                            Margin="0,8,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#DC3545"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  TextElement.Foreground="White"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#C82333"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#BD2130"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Top">
                            <TextBlock Text="ðŸšª"
                                       FontSize="18"
                                       Foreground="White"/>
                            <TextBlock Text="Logout"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Header: Greeting + Edit Button -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding GreetingMessage}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#113F67"/>
                        <TextBlock Text="Manage your account and transactions"
                                   FontSize="16"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Command="{Binding EditProfileCommand}"
                            Background="#227DCD"
                            Foreground="White"
                            Padding="10,10"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="10,0,10,0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pencil"
                                                     Width="24"
                                                     Height="24"/>
                            <TextBlock Text="Edit Profile"
                                       Margin="5,0,0,0"
                                       Foreground="White"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Profile Card -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="30"
                        Margin="5,0,0,20"
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8"
                                          ShadowDepth="2"
                                          Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profile Image -->
                        <Border Grid.Column="0"
                                Width="120"
                                Height="120"
                                CornerRadius="60"
                                BorderBrush="#227DCD"
                                BorderThickness="3"
                                Background="#F0F0F0">
                            <Border.Clip>
                                <EllipseGeometry Center="60,60"
                                                 RadiusX="60"
                                                 RadiusY="60"/>
                            </Border.Clip>
                            <Image Source="{Binding CurrentUser.Image}"
                                   Stretch="UniformToFill"/>
                        </Border>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1"
                                    Margin="30,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUser.Name}"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#113F67"/>
                            <TextBlock Text="{Binding CurrentUser.Email}"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="{Binding CurrentUser.Phone}"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding CurrentUser.Address}"
                                       FontSize="13"
                                       Foreground="#666"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Transaction History -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8"
                                          ShadowDepth="2"
                                          Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Transaction History"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#113F67"
                                   Margin="0,0,0,15"/>

                        <!-- Transaction List -->
                        <ItemsControl ItemsSource="{Binding UserTransactions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9"
                                            CornerRadius="8"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <!-- Order Header -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding ID, StringFormat='Order #{0}'}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="#113F67"/>
                                                <Border Grid.Column="1"
                                                        Background="#E8F5E9"
                                                        CornerRadius="4"
                                                        Padding="8,4">
                                                    <TextBlock Text="{Binding Payment.Status, FallbackValue='Success'}"
                                                               FontSize="11"
                                                               Foreground="#2E7D32"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Order Info -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Date"
                                                               FontSize="10"
                                                               Foreground="#999"/>
                                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                               FontSize="12"
                                                               Foreground="#333"
                                                               Margin="0,1,0,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding TotalAmount, StringFormat='Rp {0:N0}'}"
                                                                   FontSize="12"
                                                                   Foreground="#227DCD"
                                                                   FontWeight="Bold"
                                                                   Margin="0,1,0,0"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Order Items -->
                                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White"
                                                                CornerRadius="6"
                                                                Padding="10"
                                                                Margin="0,5,0,0">
                                                            <StackPanel>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="50"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <!-- Product Image -->
                                                                    <Border Grid.Column="0"
                                                                            Width="50"
                                                                            Height="50"
                                                                            CornerRadius="4"
                                                                            Background="#EEE"
                                                                            ClipToBounds="True">
                                                                        <Image Source="{Binding Product.Image}"
                                                                               Stretch="UniformToFill"/>
                                                                    </Border>

                                                                    <!-- Product Info -->
                                                                    <StackPanel Grid.Column="1"
                                                                                Margin="10,0,0,0"
                                                                                VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding Product.Name}"
                                                                                   FontSize="12"
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="#333"/>
                                                                        <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                                                                   FontSize="10"
                                                                                   Foreground="#999"
                                                                                   Margin="0,2,0,0"/>
                                                                    </StackPanel>

                                                                    <!-- Price -->
                                                                    <TextBlock Grid.Column="2"
                                                                               Text="{Binding Price, StringFormat='Rp {0:N0}'}"
                                                                               FontSize="12"
                                                                               FontWeight="Bold"
                                                                               Foreground="#227DCD"
                                                                               VerticalAlignment="Center"/>
                                                                </Grid>

                                                                <!-- Review Section -->
                                                                <Border Background="#F5F9FF"
                                                                        CornerRadius="6"
                                                                        Padding="12"
                                                                        Margin="0,10,0,0">

                                                                    <!-- Single Grid container for both panels -->
                                                                    <Grid>
                                                                        <!-- Existing Review Display -->
                                                                        <StackPanel x:Name="ExistingReviewPanel">
                                                                            <StackPanel.Style>
                                                                                <Style TargetType="StackPanel">
                                                                                    <Setter Property="Visibility"
                                                                                            Value="Collapsed"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding HasReview}"
                                                                                                     Value="True">
                                                                                            <Setter Property="Visibility"
                                                                                                    Value="Visible"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </StackPanel.Style>

                                                                            <TextBlock Text="Your Review"
                                                                                       FontSize="11"
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="#227DCD"
                                                                                       Margin="0,0,0,6"/>

                                                                            <!-- Rating Stars Display -->
                                                                            <ItemsControl ItemsSource="{Binding ReviewStars}">
                                                                                <ItemsControl.ItemsPanel>
                                                                                    <ItemsPanelTemplate>
                                                                                        <StackPanel Orientation="Horizontal"/>
                                                                                    </ItemsPanelTemplate>
                                                                                </ItemsControl.ItemsPanel>
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <TextBlock Text="â­"
                                                                                                   FontSize="14"
                                                                                                   Margin="0,0,2,0"/>
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>

                                                                            <TextBlock Text="{Binding ReviewComment}"
                                                                                       FontSize="11"
                                                                                       Foreground="#555"
                                                                                       TextWrapping="Wrap"
                                                                                       Margin="0,6,0,0"/>
                                                                        </StackPanel>

                                                                        <!-- Review Input Form -->
                                                                        <StackPanel x:Name="ReviewFormPanel">
                                                                            <StackPanel.Style>
                                                                                <Style TargetType="StackPanel">
                                                                                    <Setter Property="Visibility"
                                                                                            Value="Visible"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding HasReview}"
                                                                                                     Value="True">
                                                                                            <Setter Property="Visibility"
                                                                                                    Value="Collapsed"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </StackPanel.Style>

                                                                            <TextBlock Text="Rate this product"
                                                                                       FontSize="11"
                                                                                       FontWeight="SemiBold"
                                                                                       Foreground="#333"
                                                                                       Margin="0,0,0,6"/>

                                                                            <!-- Rating Selection -->
                                                                            <StackPanel Orientation="Horizontal"
                                                                                        Margin="0,0,0,8">
                                                                                <RadioButton GroupName="{Binding ProductID}"
                                                                                             Content="1â­"
                                                                                             Tag="1"
                                                                                             Checked="RatingButton_Checked"
                                                                                             Style="{StaticResource RatingButtonStyle}"/>
                                                                                <RadioButton GroupName="{Binding ProductID}"
                                                                                             Content="2â­"
                                                                                             Tag="2"
                                                                                             Checked="RatingButton_Checked"
                                                                                             Style="{StaticResource RatingButtonStyle}"/>
                                                                                <RadioButton GroupName="{Binding ProductID}"
                                                                                             Content="3â­"
                                                                                             Tag="3"
                                                                                             Checked="RatingButton_Checked"
                                                                                             Style="{StaticResource RatingButtonStyle}"/>
                                                                                <RadioButton GroupName="{Binding ProductID}"
                                                                                             Content="4â­"
                                                                                             Tag="4"
                                                                                             Checked="RatingButton_Checked"
                                                                                             Style="{StaticResource RatingButtonStyle}"/>
                                                                                <RadioButton GroupName="{Binding ProductID}"
                                                                                             Content="5â­"
                                                                                             Tag="5"
                                                                                             Checked="RatingButton_Checked"
                                                                                             IsChecked="True"
                                                                                             Style="{StaticResource RatingButtonStyle}"/>
                                                                            </StackPanel>

                                                                            <!-- Comment Input -->
                                                                            <TextBox x:Name="ReviewCommentBox"
                                                                                     Tag="{Binding}"
                                                                                     Text="{Binding TempReviewComment, UpdateSourceTrigger=PropertyChanged}"
                                                                                     Background="White"
                                                                                     BorderBrush="#DDD"
                                                                                     BorderThickness="1"
                                                                                     Padding="8"
                                                                                     MinHeight="60"
                                                                                     MaxHeight="100"
                                                                                     TextWrapping="Wrap"
                                                                                     AcceptsReturn="True"
                                                                                     VerticalScrollBarVisibility="Auto"
                                                                                     FontSize="11"
                                                                                     Margin="0,0,0,8">
                                                                                <TextBox.Style>
                                                                                    <Style TargetType="TextBox">
                                                                                        <Setter Property="Template">
                                                                                            <Setter.Value>
                                                                                                <ControlTemplate TargetType="TextBox">
                                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                                                            CornerRadius="4"
                                                                                                            Padding="{TemplateBinding Padding}">
                                                                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                                                                      VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"/>
                                                                                                    </Border>
                                                                                                </ControlTemplate>
                                                                                            </Setter.Value>
                                                                                        </Setter>
                                                                                    </Style>
                                                                                </TextBox.Style>
                                                                            </TextBox>

                                                                            <!-- Submit Button -->
                                                                            <Button Content="Submit Review"
                                                                                    Command="{Binding DataContext.SubmitReviewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                    CommandParameter="{Binding}"
                                                                                    Background="#227DCD"
                                                                                    Foreground="White"
                                                                                    BorderThickness="0"
                                                                                    Padding="12,6"
                                                                                    FontSize="11"
                                                                                    FontWeight="SemiBold"
                                                                                    Cursor="Hand"
                                                                                    HorizontalAlignment="Right">
                                                                                <Button.Template>
                                                                                    <ControlTemplate TargetType="Button">
                                                                                        <Border Background="{TemplateBinding Background}"
                                                                                                CornerRadius="4"
                                                                                                Padding="{TemplateBinding Padding}">
                                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                                              VerticalAlignment="Center"/>
                                                                                        </Border>
                                                                                    </ControlTemplate>
                                                                                </Button.Template>
                                                                                <Button.Style>
                                                                                    <Style TargetType="Button">
                                                                                        <Setter Property="Background"
                                                                                                Value="#227DCD"/>
                                                                                        <Style.Triggers>
                                                                                            <Trigger Property="IsMouseOver"
                                                                                                     Value="True">
                                                                                                <Setter Property="Background"
                                                                                                        Value="#1A6AB8"/>
                                                                                            </Trigger>
                                                                                            <Trigger Property="IsPressed"
                                                                                                     Value="True">
                                                                                                <Setter Property="Background"
                                                                                                        Value="#155A9D"/>
                                                                                            </Trigger>
                                                                                        </Style.Triggers>
                                                                                    </Style>
                                                                                </Button.Style>
                                                                            </Button>

                                                                        </StackPanel>
                                                                    </Grid>

                                                                </Border>

                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <TextBlock Text="No transactions yet"
                                   Foreground="#999"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   Margin="0,30">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserTransactions.Count}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>