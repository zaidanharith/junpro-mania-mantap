<UserControl x:Class="BOZea.Views.Auth.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             FontFamily="Plus Jakarta Sans"
             Background="#F5F5F5">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.2"/>

        <!-- Add BoolToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="100"
                             Height="10"
                             Foreground="#227DCD"/>
                <TextBlock Text="Loading..."
                           Foreground="White"
                           FontSize="14"
                           Margin="0,10,0,0"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30,40,40">

                <!-- Header: Greeting + Edit Button -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding GreetingMessage}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#113F67"/>
                        <TextBlock Text="Manage your account and transactions"
                                   FontSize="13"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Command="{Binding EditProfileCommand}"
                            Background="#227DCD"
                            Foreground="White"
                            Padding="20,10"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pencil"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="Edit Profile"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Profile Card -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="30"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8"
                                          ShadowDepth="2"
                                          Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profile Image -->
                        <Border Grid.Column="0"
                                Width="120"
                                Height="120"
                                CornerRadius="60"
                                BorderBrush="#227DCD"
                                BorderThickness="3"
                                Background="#F0F0F0">
                            <Border.Clip>
                                <EllipseGeometry Center="60,60"
                                                 RadiusX="60"
                                                 RadiusY="60"/>
                            </Border.Clip>
                            <Image Source="{Binding CurrentUser.Image}"
                                   Stretch="UniformToFill"/>
                        </Border>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1"
                                    Margin="30,0,0,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUser.Name}"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#113F67"/>
                            <TextBlock Text="{Binding CurrentUser.Email}"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="{Binding CurrentUser.Phone}"
                                       FontSize="13"
                                       Foreground="#666"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="{Binding CurrentUser.Address}"
                                       FontSize="13"
                                       Foreground="#999"
                                       TextWrapping="Wrap"
                                       MaxWidth="400"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Transaction History -->
                <Border Background="White"
                        CornerRadius="12"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8"
                                          ShadowDepth="2"
                                          Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Transaction History"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#113F67"
                                   Margin="0,0,0,15"/>

                        <!-- Transaction List -->
                        <ItemsControl ItemsSource="{Binding UserTransactions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9"
                                            CornerRadius="8"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                            <!-- Order Header -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding ID, StringFormat='Order #{0}'}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="#113F67"/>
                                                <Border Grid.Column="1"
                                                        Background="#E8F5E9"
                                                        CornerRadius="4"
                                                        Padding="8,4">
                                                    <TextBlock Text="{Binding Payment.Status, FallbackValue='Success'}"
                                                               FontSize="11"
                                                               Foreground="#2E7D32"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Order Info -->
                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Date"
                                                               FontSize="10"
                                                               Foreground="#999"/>
                                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                               FontSize="12"
                                                               Foreground="#333"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Total Amount"
                                                               FontSize="10"
                                                               Foreground="#999"/>
                                                    <TextBlock Text="{Binding TotalAmount, StringFormat='Rp {0:N0}'}"
                                                               FontSize="12"
                                                               Foreground="#227DCD"
                                                               FontWeight="Bold"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Order Items -->
                                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White"
                                                                CornerRadius="6"
                                                                Padding="10"
                                                                Margin="0,5,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Product Image -->
                                                                <Border Grid.Column="0"
                                                                        Width="50"
                                                                        Height="50"
                                                                        CornerRadius="4"
                                                                        Background="#EEE"
                                                                        ClipToBounds="True">
                                                                    <Image Source="{Binding Product.Image}"
                                                                           Stretch="UniformToFill"/>
                                                                </Border>

                                                                <!-- Product Info -->
                                                                <StackPanel Grid.Column="1"
                                                                            Margin="10,0,0,0"
                                                                            VerticalAlignment="Center">
                                                                    <TextBlock Text="{Binding Product.Name}"
                                                                               FontSize="12"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="#333"/>
                                                                    <TextBlock Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                                                               FontSize="10"
                                                                               Foreground="#999"
                                                                               Margin="0,2,0,0"/>
                                                                </StackPanel>

                                                                <!-- Price -->
                                                                <TextBlock Grid.Column="2"
                                                                           Text="{Binding Price, StringFormat='Rp {0:N0}'}"
                                                                           FontSize="12"
                                                                           FontWeight="Bold"
                                                                           Foreground="#227DCD"
                                                                           VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Empty State -->
                        <TextBlock Text="No transactions yet"
                                   Foreground="#999"
                                   FontSize="14"
                                   TextAlignment="Center"
                                   Margin="0,30">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility"
                                            Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UserTransactions.Count}"
                                                     Value="0">
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>